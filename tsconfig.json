{
  "compilerOptions": {
    "target": "ES2023",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx":  "react-jsx",
    "libReplacement": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsxImportSource": "sdui-tsxx",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node10",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
}
