{
  "compilerOptions": {
    "target": "ES2023",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx":  "react-jsx",
    "libReplacement": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsxImportSource": "sdui-tsx",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@sdui": ["./src/sdui"],
      "@sdui/blocks": ["./src/granularlayout"],
      "@compass": ["./src/compass"]
    }
  }
}
